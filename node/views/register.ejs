<div class="col-sm-6 col-lg-6 mb-3">
    <div class="title-left">
        <h3>Create New Account</h3>

        <%- include ('partials/messages') %>
    
    </div>
    
    <form class="mt-3 review-form-box" id="formRegister" method="post" action="/register">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="InputName" class="mb-0">First Name</label>
                <input type="text" class="form-control" id="InputName" name="firstName"
                    placeholder="First Name" value="<%= typeof firstName != 'undefined' ? firstName : ''%>">
            </div>
            <div class="form-group col-md-6">
                <label for="InputLastname" class="mb-0">Last Name</label>
                <input type="text" class="form-control" id="InputLastname" name="lastName"
                    placeholder="Last Name" value="<%= typeof lastName != 'undefined' ? lastName : ''%>">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="InputUsername" class="mb-0">Username</label>
                <input type="text" class="form-control" id="InputUsername" name="username"
                    placeholder="username" value="<%= typeof username != 'undefined' ? username : ''%>">
            </div>

            <div class="form-group col-md-6">
                <label for="InputEmail1" class="mb-0">Email Address <span class="asterisk">*</span></label>
                <input type="email" class="form-control" id="InputEmail1" name="email"
                    placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : ''%>">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="InputPassword1" class="mb-0">Password <span class="asterisk">*</span></label>
                <input type="password" class="form-control" id="InputPassword1" name="password1"
                    placeholder="Password" value="<%= typeof password1 != 'undefined' ? password1 : ''%>">
            </div>
            <div class="form-group col-md-6">
                <label for="InputPassword1" class="mb-0">Repeat Password <span
                        class="asterisk">*</span></label>
                <input type="password" class="form-control" id="InputPassword1" name="password2"
                    placeholder="Repeat Password"
                    value="<%= typeof password2 != 'undefined' ? password2 : ''%>">
            </div>
        </div>
        <button type="submit" class="btn hvr-hover">Register</button>
    </form>
</div>